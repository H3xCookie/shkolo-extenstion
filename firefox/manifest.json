{
  "manifest_version": 2,
  "name": "Better Shkolo",
  "version": "1.0.1",

  "description": "Прави школо мега супер-дупер готин-мотин",

  "content_scripts": [
    {
      "matches": ["*://*.shkolo.bg/*"],
      "js": ["shk.js"],
      "css": ["style.css"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "permissions": [
    "activeTab"
  ]

}
